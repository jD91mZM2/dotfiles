###################
# General hotkeys #
###################

# terminal emulator
super + shift + Return
    st || xterm

# program launcher
super + p
    j4-dmenu-desktop --dmenu 'dmenu -fn Hack-10 -i -sb "#a38b06" -l 15 -p "Run:"' || dmenu_run

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# copy a nonbreaking space to clipboard
super + z
    echo -n "â€‹" | xclip -sel clip

# lock the screen with xidlehook
super + shift + l
    xidlehook-client --trigger --socket /tmp/xidlehook.sock

Print
    ~/dotfiles/screenshot.sh screen
super + Print
    ~/dotfiles/screenshot.sh window
super + shift + Print
    ~/dotfiles/screenshot.sh region

# shutdown the system
super + Pause
    [ "$(echo -e "Cancel\nShutdown" | dmenu)" = "Shutdown" ] && systemctl poweroff

# quit bspwm normally
super + shift + q
    [ "$(echo -e "Cancel\nExit BSPWM" | dmenu)" = "Exit BSPWM" ] && bspc quit

# close and kill
super + shift + {c,x}
    bspc node -{c,x}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
    bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + Return
    bspc node -s biggest.local

# volume settings
XF86Audio{Raise,Lower}Volume
    notify-send "$(amixer set Master 2%{+,-} unmute | grep -o "[0-9]*%" | head -n1)" -t 200
XF86AudioMute
    if [ "$(amixer set Master toggle | grep -o "\<on\|off\>" | head -n1)" = "on" ]; then \
        notify-send "Unmuted" -t 500; \
    else \
        notify-send "Muted" -t 500; \
    fi

~Up; ~Up; ~Down; ~Down; ~Left; ~Right; ~Left; ~Right; ~b; ~a
    xdg-open "https://youtu.be/dQw4w9WgXcQ"

########################
# Window state hotkeys #
########################

# set the window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

#################
# Focus hotkeys #
#################

# focus the next/previous node in the current desktop
super + {j, k}
    bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# focus the next/previous monitor
super + {w,e}
    bspc node -f "@{prev,next}.active:"

# focus on the given desktop
# unlike `desktop -f`, in a monocle view this keeps the current
# window focused
super + {1-9,0}
    desktop="^{1-9,10}"; bspc node -f "@$desktop:" || bspc desktop -f "$desktop"

# send current node to the given desktop
super + shift + {1-9,0}
    bspc node -d "^{1-9,10}"

###############################
# Window preselection hotkeys #
###############################

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

############################
# Window rearrange hotkeys #
############################

# change the ratio
super + {h,l}
    bspc node -r 0.3

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}
